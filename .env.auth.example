# ============================================
# Echo Backend - Auth Service Environment
# ============================================

# Application
APP_ENV=production
VERSION=1.0.0

# Server Ports
HTTP_PORT=8080
GRPC_PORT=50051

# Logging
LOG_LEVEL=info

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=echo
POSTGRES_PASSWORD=echo_password
POSTGRES_DB=echo_db
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Security Settings
BCRYPT_COST=12
OTP_EXPIRY=5m
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=15m

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Build Args (optional)
BUILD_TIME=
GIT_COMMIT=
