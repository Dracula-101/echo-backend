# Environment
APP_ENV=development
LOG_LEVEL=debug
LOG_FORMAT=console

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_SHUTDOWN_TIMEOUT=10s

# TLS/SSL
TLS_ENABLED=false
TLS_CERT_FILE=./tls/cert.pem
TLS_KEY_FILE=./tls/key.pem

# Service Discovery (Internal Docker Network)
AUTH_SERVICE_URL=http://auth-service:8081
USER_SERVICE_URL=http://user-service:8082
MESSAGE_SERVICE_URL=http://message-service:8083
MEDIA_SERVICE_URL=http://media-service:8084
NOTIFICATION_SERVICE_URL=http://notification-service:8085
PRESENCE_SERVICE_URL=http://presence-service:8086
LOCATION_SERVICE_URL=http://location-service:8090

# Redis (Gateway-specific cache)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=1
REDIS_POOL_SIZE=10
REDIS_MAX_RETRIES=3

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Request-ID
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST=200

# Tracing
TRACING_ENABLED=false
TRACING_ENDPOINT=http://jaeger:14268/api/traces
TRACING_SERVICE_NAME=api-gateway

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090