# Environment
APP_ENV=development
LOG_LEVEL=debug
LOG_FORMAT=console

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8081
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_SHUTDOWN_TIMEOUT=10s

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=echo
DB_PASSWORD=echo_password
DB_NAME=echo_db
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=2
REDIS_POOL_SIZE=10
REDIS_MAX_RETRIES=3
CACHE_ENABLED=true
CACHE_TTL=15m

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=change_me_generate_with_openssl_rand_base64_32
JWT_ISSUER=echo-auth-service
JWT_AUDIENCE=echo-users
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=168h
JWT_LEEWAY=1m

# Encryption (CHANGE IN PRODUCTION!)
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY=change_me_must_be_32_characters
ENCRYPTION_SALT=change_me_16_char
ENCRYPTION_ITERATIONS=100000
ENCRYPTION_KEY_DERIVATION=pbkdf2

# Password Hashing
HASH_ALGORITHM=argon2id
HASH_MEMORY=65536
HASH_ITERATIONS=3
HASH_PARALLELISM=2
HASH_SALT_LENGTH=16
HASH_KEY_LENGTH=32

# External Services
LOCATION_SERVICE_ENABLED=true
LOCATION_SERVICE_URL=http://location-service:8090
LOCATION_SERVICE_TIMEOUT=5s

# Email (Optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@echo.app
SMTP_FROM_NAME=Echo App
SMTP_USE_TLS=true

# Security
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m
REQUIRE_EMAIL_VERIFICATION=false

# Feature Flags
FEATURE_OAUTH_ENABLED=false
FEATURE_2FA_ENABLED=false
FEATURE_PASSWORD_RESET_ENABLED=true
FEATURE_RATE_LIMITING_ENABLED=true

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW=1m

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9091