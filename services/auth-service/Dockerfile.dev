# =============================================================================
# Build Stage - Compile the Go application
# =============================================================================
FROM golang:1.25-alpine AS builder

# Install build dependencies
RUN apk add --no-cache \
    git \
    ca-certificates \
    tzdata

WORKDIR /build

# Copy shared module first
COPY shared/ shared/

# Copy auth-service module
COPY services/auth-service/ auth-service/

# Set working directory to auth-service
WORKDIR /build/auth-service

# Replace the shared module path to use local copy
RUN go mod edit -replace shared=../shared

# Add shared as a requirement and download all dependencies
RUN go get shared && go mod tidy && go mod download

# Build the binary with optimizations
RUN CGO_ENABLED=0 \
    GOOS=linux \
    GOARCH=amd64 \
    go build \
    -ldflags='-w -s -extldflags "-static"' \
    -a \
    -installsuffix cgo \
    -o /bin/auth-service \
    ./cmd/server


# =============================================================================
# Final Stage - Minimal runtime image
# =============================================================================
FROM alpine:latest

# Install runtime dependencies
RUN apk --no-cache add \
    ca-certificates \
    tzdata \
    curl 

# Create non-root user for security
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser

WORKDIR /app

# Copy the binary from builder
COPY --from=builder /bin/auth-service .

# Copy configs directory
COPY --from=builder /build/auth-service/configs ./configs

# Copy env file for development
COPY --from=builder /build/auth-service/.env.docker .env

# Set proper ownership
RUN chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Expose application port
EXPOSE 8081

# Health check endpoint
HEALTHCHECK --interval=30s \
    --timeout=3s \
    --start-period=5s \
    --retries=3 \
    CMD curl -s -o /dev/null -w "%{http_code}" http://localhost:8081/health | grep -q "200" || exit 1

# Run the application
CMD ["./auth-service"]