# Environment
APP_ENV=development
LOG_LEVEL=debug
LOG_FORMAT=console

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8083
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_SHUTDOWN_TIMEOUT=10s
SERVER_MAX_HEADER_BYTES=1048576

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=echo
DB_PASSWORD=echo_password
DB_NAME=echo_db
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=3
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=2
REDIS_MAX_RETRIES=3
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_POOL_TIMEOUT=4s

# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC_MESSAGES=messages
KAFKA_TOPIC_NOTIFICATIONS=notifications
KAFKA_CONSUMER_GROUP=message-service-group
KAFKA_ENABLE_COMPRESSION=true
KAFKA_COMPRESSION_TYPE=snappy
KAFKA_RETRY_MAX=3
KAFKA_REQUIRED_ACKS=1
KAFKA_ENABLE_IDEMPOTENCE=true
KAFKA_SESSION_TIMEOUT=10s
KAFKA_HEARTBEAT_INTERVAL=3s

# WebSocket
WS_ENABLED=true
WS_PATH=/ws
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_WRITE_WAIT=10s
WS_PONG_WAIT=60s
WS_PING_PERIOD=54s
WS_MAX_MESSAGE_SIZE=10485760
WS_CLIENT_BUFFER_SIZE=256

# CORS
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Request-ID

# Message Settings
MESSAGE_MAX_LENGTH=10000
MESSAGE_RETENTION_DAYS=30
ENABLE_MESSAGE_ENCRYPTION=false

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9093