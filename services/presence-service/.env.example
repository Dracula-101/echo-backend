######################################################################
# Echo Presence Service - Environment Variables
# Standardized for consistency with main .env and docker-compose.yml
######################################################################

# General
ENVIRONMENT=development
APP_ENV=development
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_OUTPUT=stdout
CONFIG_PATH=./configs/config.yaml

# =====================
# Server
# =====================
SERVER_HOST=0.0.0.0
SERVER_PORT=8085

# =====================
# Database
# =====================
DB_HOST=postgres
DB_PORT=5432
DB_USER=echo
DB_PASSWORD=echo_password
DB_NAME=echo_db
DB_SSL_MODE=disable

# =====================
# Redis
# =====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
CACHE_ENABLED=true

# =====================
# Presence
# =====================
PRESENCE_HEARTBEAT_INTERVAL=30s
PRESENCE_SESSION_TIMEOUT=5m
PRESENCE_CLEANUP_INTERVAL=1m
PRESENCE_TYPING_INDICATOR_TTL=10s
