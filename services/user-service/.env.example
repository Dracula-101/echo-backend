######################################################################
# Echo User Service - Environment Variables
# Standardized for consistency with main .env and docker-compose.yml
######################################################################

# General
ENVIRONMENT=development
APP_ENV=development
LOG_LEVEL=debug
LOG_FORMAT=console
CONFIG_PATH=./configs/config.yaml

# =====================
# Server
# =====================
SERVER_HOST=0.0.0.0
SERVER_PORT=8082
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_SHUTDOWN_TIMEOUT=10s

# =====================
# Database
# =====================
DB_HOST=postgres
DB_PORT=5432
DB_USER=echo
DB_PASSWORD=echo_password
DB_NAME=echo_db
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# =====================
# Redis
# =====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=1
REDIS_POOL_SIZE=10
REDIS_MAX_RETRIES=3
CACHE_ENABLED=true
CACHE_TTL=5m

# =====================
# User Profile Settings
# =====================
USERNAME_MIN_LENGTH=3
USERNAME_MAX_LENGTH=30
DISPLAYNAME_MAX_LENGTH=100
BIO_MAX_LENGTH=500
ALLOW_USERNAME_CHANGE=true
USERNAME_CHANGE_COOLDOWN=30d

# =====================
# Search Settings
# =====================
SEARCH_MIN_QUERY_LENGTH=2
SEARCH_MAX_RESULTS=50
SEARCH_DEFAULT_LIMIT=20

# =====================
# Feature Flags
# =====================
FEATURE_USER_SEARCH_ENABLED=true
FEATURE_PROFILE_VERIFICATION_ENABLED=false
FEATURE_AVATAR_UPLOAD_ENABLED=false

# =====================
# Metrics
# =====================
METRICS_ENABLED=true
METRICS_PORT=9092

# Search Settings
SEARCH_MIN_QUERY_LENGTH=2
SEARCH_MAX_RESULTS=50
SEARCH_DEFAULT_LIMIT=20

# Feature Flags
FEATURE_USER_SEARCH_ENABLED=true
FEATURE_PROFILE_VERIFICATION_ENABLED=false
FEATURE_AVATAR_UPLOAD_ENABLED=false

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9092
